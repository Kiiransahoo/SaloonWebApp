@page
@model SaloonApp.Pages.Register.RegisterModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Register - SaloonApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        body {
            background: url('/images/guilherme-petri-ptofbgku3ui-unsplash.jpg') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
        }

        .register-card {
            margin-top: 120px;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0,0,0,.3);
            background: rgba(255,255,255,.9);
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">

                <div class="card register-card p-4">

                    <h3 class="text-center mb-4">Create Account</h3>

                    <form method="post">

                        <div class="mb-2">
                            <label>Username</label>
                            <input asp-for="Username" class="form-control" />
                        </div>

                        <div class="mb-2">
                            <label>Password</label>
                            <input asp-for="Password" type="password" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label>Role</label>
                            <select asp-for="Role" class="form-control">
                                <option>User</option>
                                <option>Saloon</option>
                            </select>
                        </div>

                        <button class="btn btn-primary w-100">Register</button>

                        <p class="text-success text-center mt-2">@Model.Message</p>

                        <p class="text-center mt-3">
                            Already have an account?
                            <a href="/Login">Login</a>
                        </p>

                    </form>

                </div>

            </div>
        </div>
    </div>

</body>
</html>
