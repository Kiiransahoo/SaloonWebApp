@page "/Login"
@model SaloonApp.Pages.Login.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login - BarberBook</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body{
            height: 100vh;
            margin: 0;
            background: url('/images/guilherme-petri-ptofbgku3ui-unsplash.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .login-card{
            margin-top: 120px;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0,0,0,.2);
        }

        .brand-title{
            font-weight:700;
            color:#2575fc;
        }

        .btn-primary{
            border-radius:25px;
        }

        .form-control{
            border-radius:10px;
        }

        .error-text{
            font-size:14px;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">

                <div class="card login-card p-4">

                    <h3 class="text-center brand-title mb-4">BarberBook</h3>

                    <form method="post">

                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input asp-for="Username" class="form-control" placeholder="Enter username" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                        </div>

                        <button class="btn btn-primary w-100 mt-2">
                            Login
                        </button>
                        <p class="text-center mt-3">
                            Don't have an account?
                            <a href="/Register/Register">Register here</a>
                        </p>
                        <p class="text-danger text-center mt-2 error-text">
                            @Model.Error
                        </p>

                    </form>

                </div>

            </div>
        </div>
    </div>

</body>
</html>
